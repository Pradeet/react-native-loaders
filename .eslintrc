{
  "parser"  : "babel-eslint",
  "ecmaFeatures": {
    "jsx": true
  },
  "extends" : [
    "airbnb"
  ],
  "root": true,
  "settings" : {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".android.js",
          ".ios.js",
          ".native.js"
        ]
      },
      "babel-module": {}
    }
  },
  "plugins": [
    "babel",
    "react-native"
  ],
  "env": {
    "browser" : true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "EMPTY_OBJECT" : false,
    "EMPTY_ARRAY"  : false
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "react/forbid-prop-types": [0, { "forbid": [] }],
    "react-native/no-unused-styles": 2,
    "react-native/split-platform-components": 2,
    "react-native/no-inline-styles": 2,
    "semi": [2, "always"],
    "max-len": [2, 200, 2],
    "react/require-default-props": 0,
    "comma-dangle": 0,
    "global-require": 0,
    "generator-star-spacing": 0,
    "react/sort-comp": [2, {
      "order": [
        "static-properties",
        "static-methods",
        "lifecycle",
        "render",
        "/^render.+$/",
        "/^on.+$/",
        "everything-else"
      ],
      "groups": {
        "lifecycle": [
          "displayName",
          "propTypes",
          "contextTypes",
          "childContextTypes",
          "mixins",
          "statics",
          "defaultProps",
          "constructor",
          "getDefaultProps",
          "state",
          "getInitialState",
          "getChildContext",
          "componentWillMount",
          "componentDidMount",
          "componentWillReceiveProps",
          "shouldComponentUpdate",
          "componentWillUpdate",
          "componentDidUpdate",
          "componentWillUnmount"
        ]
      }
    }]
  }
}
